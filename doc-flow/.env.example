# Backend Environment Variables
# Copy this file to .env and update with actual values

# Server Configuration
NODE_ENV=development
PORT=5000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-CHANGE-THIS-IN-PRODUCTION-use-at-least-32-chars
JWT_EXPIRY=30m

# Database Configuration (PostgreSQL example)
DATABASE_URL=postgresql://username:password@localhost:5432/ukgov_platform
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ukgov_platform
DB_USER=postgres
DB_PASSWORD=your-db-password

# Super Admin Credentials (for seeding)
SUPER_ADMIN_EMAIL=superadmin@uk.gov.in
SUPER_ADMIN_NAME=Super Administrator
SUPER_ADMIN_PASSWORD=SecureAdmin2025!
# ⚠️  Change this password immediately after first deployment!

# Email Configuration (for sending credentials)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@uk.gov.in
SMTP_PASS=your-email-password

# Redis Configuration (optional, for session storage)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=another-super-secret-key-for-sessions

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CAPTCHA (optional)
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn

# File Upload (if needed)
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
